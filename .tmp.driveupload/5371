from tkinter import *
import subprocess
import keyboard

root = Tk()
root.title('Search 2.1')
root.geometry("250x40")
root.iconbitmap('d:/Apps/search2.1.ico')

s = Entry(root, width=100, bg="white", fg="cyan")
s.pack()


#spremeni tukaj
a_n = "photoshop"
a_p = "D://Apps//Adobe Photoshop 2021//Photoshop.exe"

b_n = "discord"
b_p = "C://Users//bozic//AppData//Local//Discord//app-1.0.9003//Discord.exe"

c_n = "viber"
c_p = "C://Users//bozic//AppData//Local//Viber//Viber.exe"

d_n = "synapse"
d_p = "C://Program Files (x86)//Razer//Synapse3//WPFUI//Framework//Razer Synapse 3 Host//Razer Synapse 3.exe"

e_n = "geforce"
e_p = "C://Program Files//NVIDIA Corporation//NVIDIA GeForce Experience//NVIDIA GeForce Experience.exe"

f_n = "vscode"
f_p = "D://Apps//Microsoft VS Code//Code.exe"

g_n = "brave"
g_p = "C://Program Files//BraveSoftware//Brave-Browser//Application//brave.exe"

h_n = "tlauncher"
h_p = "C://Users//bozic//AppData//Roaming//.minecraft//TLauncher.exe"

i_n = "steam"
i_p = "D://Apps//steam//steam.exe"

j_n = "calc"
j_p = "D://Apps//calculator.exe"

k_n = "steep"
k_p = "D://Games//Steep//steep.exe"


def myClick():
    app = s.get()
    print(app)


    #Search for the app
    if app == a_n:    #Spremeni ime v kaj želiš da je geslo za to aplikacijo.
        subprocess.call(a_p)    #V oklepaje prilepi pot do aplikacije ki jo želiš odpreti, vse "\" morajo biti zamenjane z "//" in na koncu more biti ime datoteke npr. "discord.exe"
        exit         
    #To je en modul za eno aplikacijo. Če želiš več aplikacij samo kopiraj modul in spremeni podatke tako kot piše zgoraj
    elif app == b_n:
        subprocess.call(b_p)
        exit

    elif app == c_n:
        subprocess.call(c_p)
        exit
    elif app == d_n:
        subprocess.call(d_p)
        exit
    elif app == e_n:
        subprocess.call(e_p)
        exit
    elif app == f_n:
        subprocess.call(f_p)
        exit
    elif app == g_n:
        subprocess.call(g_p)
        exit
    elif app == h_n:
        subprocess.call(h_p)
        exit
    elif app == i_n:
        subprocess.call(i_p)
        exit
    elif app == j_n:
        subprocess.call(j_p)
        exit
    elif app == k_n:
        subprocess.call(k_p)
        exit


myButton = Button(root, text="Search", command=myClick)
myButton.pack()




root.mainloop()